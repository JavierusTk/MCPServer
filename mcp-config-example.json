    },
    "cybermax-hello-local": {
      "_comment": "Servidor stdio local - ejecuta el binario directamente",
      "command": "W:\\MCPServer\\CyberMaxHelloMCP.exe",
      "args": [],
      "env": {
        "PORT": "3001"
      }
    }
  }
}